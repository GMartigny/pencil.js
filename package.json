{
  "name": "pencil.js",
  "version": "0.8.3",
  "description": "Modular 2D drawing library.",
  "main": "pencil.js",
  "files": [
    "dist/"
  ],
  "unpkg": "dist/pencil.min.js",
  "jsdelivr": "dist/pencil.min.js",
  "scripts": {
    "init": "lerna bootstrap",
    "lint": "eslint pencil.js modules/**/*.js",
    "test": "nyc --reporter=lcov ava",
    "build": "webpack --mode=development",
    "prepublishOnly": "webpack --mode=production"
  },
  "ava": {
    "require": [
      "esm",
      "./test/helpers/browser-env-setup.js"
    ]
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "test"
    ],
    "coverageReporters": [
      "lcov"
    ]
  },
  "eslintIgnore": [
    "**/node_modules/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GMartigny/pencil.js.git"
  },
  "keywords": [
    "canvas",
    "drawing",
    "frontend",
    "modular",
    "toolbelt"
  ],
  "author": "Guillaume Martigny <guillaume.martigny@gmail.com> (https://www.guillaume-martigny.fr)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GMartigny/pencil.js/issues"
  },
  "homepage": "https://github.com/GMartigny/pencil.js#readme",
  "dependencies": {
    "@pencil.js/arc": "^0.8.3",
    "@pencil.js/base-event": "^0.8.0",
    "@pencil.js/button": "^0.8.3",
    "@pencil.js/checkbox": "^0.8.3",
    "@pencil.js/circle": "^0.8.3",
    "@pencil.js/component": "^0.8.3",
    "@pencil.js/container": "^0.8.2",
    "@pencil.js/draggable": "^0.8.3",
    "@pencil.js/event-emitter": "^0.8.0",
    "@pencil.js/image": "^0.8.3",
    "@pencil.js/input": "^0.8.3",
    "@pencil.js/keyboard-event": "^0.8.3",
    "@pencil.js/line": "^0.8.3",
    "@pencil.js/math": "^0.8.0",
    "@pencil.js/mouse-event": "^0.8.2",
    "@pencil.js/offscreen-canvas": "^0.8.2",
    "@pencil.js/path": "^0.8.3",
    "@pencil.js/polygon": "^0.8.3",
    "@pencil.js/position": "^0.8.2",
    "@pencil.js/rectangle": "^0.8.3",
    "@pencil.js/regular-polygon": "^0.8.3",
    "@pencil.js/resizable": "^0.8.3",
    "@pencil.js/scene": "^0.8.3",
    "@pencil.js/slider": "^0.8.3",
    "@pencil.js/spline": "^0.8.3",
    "@pencil.js/square": "^0.8.3",
    "@pencil.js/star": "^0.8.3",
    "@pencil.js/text": "^0.8.3",
    "@pencil.js/triangle": "^0.8.3",
    "@pencil.js/vector": "^0.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.53",
    "@babel/preset-env": "^7.0.0-beta.53",
    "@gmartigny/eslint-config": "^1.2.0",
    "ava": "^0.25.0",
    "babel-loader": "^8.0.0-beta.2",
    "browser-env": "^3.2.5",
    "eslint": "^5.1.0",
    "eslint-plugin-ava": "^5.0.0",
    "eslint-plugin-import": "^2.11.0",
    "esm": "^3.0.71",
    "lerna": "^2.11.0",
    "nyc": "^12.0.2",
    "webpack": "^4.16.0",
    "webpack-cli": "^3.0.8"
  }
}
